#!/bin/bash

set -eu

source=$1
dir=$(dirname $source)
filename=$(basename $source)
target=$(basename $source .mustache).html
temp=$(tempfile)
chmod 644 $temp

cleanup () {
  local ev=$?
  rm -f -- $temp
  exit $ev
}
trap cleanup EXIT

get_varfile () {
  local var_file=$(basename $source .mustache).json
  if [ -f "$var_file" ]; then
    echo $var_file
  else
    echo /dev/null
  fi
}

args=$(get_varfile)

cd $dir
mustache $args $filename > $temp
mv -f -- $temp $target
rm -f -- $filename
if [ -f $args ]; then
  rm -f -- $args
fi
